<div class="wrapper">
  <h2>会員情報入力</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class ="organizer">
      <%= f.label :名前（漢字） %><br/>
      <%= f.text_field :first_name, autofocus: true,placeholder:"例：山田" %>
      <%= f.text_field :last_name, autofocus: true,placeholder:"例：太郎" %>
    </div>
     <div class ="organizer_kana">
      <%= f.label :名前（カナ） %><br/>
      <%= f.text_field :first_name_kana, autofocus: true,placeholder:"例：ヤマダ" %>
      <%= f.text_field :last_name_kana, autofocus: true,placeholder:"例：タロウ" %>
    </div>

    <div class="email">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"例:rijeiejre@gmail.com" %>
    </div>

    <div class="password">
      <%= f.label :パスワード（６文字以上で入力）,class:"pass" %>
      <% if @minimum_password_length %>
      
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="password2">
      <%= f.label :パスワード（確認用）,class:"pass" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "登録する" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
